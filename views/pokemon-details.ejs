<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `${pokemon.name} | ShinyDex`}) %>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h1 class="pageTitle">Pokemon Details</h1>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/review">Reviews</a>
                </li>
            </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid bkgrd">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <img src="<%= pokemon.photo %>">
            </div>
            <div class="text-box col-6">
                <div class="pkmn-details">
                    <h1><%= pokemon.name %></h1>
                    <h4>Type:</h4>
                    <% for(let i = 0; i < pokemon.type.length; i++) { %>
                    <span><%= pokemon.type[i] %></span>
                    <% } %>
                    <p>Ability: <%= pokemon.ability %></p>
                    <p>Nature: <%= pokemon.nature %></p>
                    <p>Region Found: <%= pokemon.region %></p>
                    <p>Base HP: <%= pokemon.baseHP %></p>
                    <p>Base Attack: <%= pokemon.baseATT %></p>
                    <p>Base Defense: <%= pokemon.baseDEF %></p>
                    <p>Base Special Attack: <%= pokemon.baseSPATT %></p>
                    <p>Base Special Defense: <%= pokemon.baseSPDEF %></p>
                    <p>Base Speed: <%= pokemon.baseSPD %></p>
                </div>
                <% for(let i = 0; i < pokemon.reviews.length; i++) { %>
                <p>Username: <%= pokemon.reviews[i].username %></p>
                <p>Review Title: <%= pokemon.reviews[i].title %></p>
                <p>Comment: <%= pokemon.reviews[i].comment %></p>
                <p>Date Posted: <%= pokemon.reviews[i].commentDate %></p>
                <% } %>
            </div>
            <div class="container">
                <div class="row">
                    <form class="col-2">
                        <button type="button" class="btn btn-primary"><a class="button-details" href="/pokemon/<%= pokemon._id %>/edit">Edit Pokemon</a></button>
                    </form>
                    <form method="POST" action="/pokemon/<%= pokemon._id %>?_method=DELETE" class="col-2">
                        <button type="submit" value="Delete" class="btn btn-primary">Delete Pokemon</button>
                    </form>
                    <form class="col-2">
                        <button type="button" class="btn btn-primary"><a class="button-details" href="/review/new/<%= pokemon._id %>">Add Review</a></button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <%- include('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

</html>