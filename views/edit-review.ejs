<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `Edit Review | ShinyDex`}) %>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><h1>ShinyDex</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">Reviews</a>
                </li>
            </ul>
            </div>
        </div>
    </nav>

    <form class="container" method="POST" action="/review/create/<%= review._id %>">
        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="name" class="form-label">Username</label>
                <input type="text" class="form-control validate" name="username" value="<%= review.username %>" required>
            </div>
        
            <div class="mb-3">
                <label for="title" class="form-label">Title of Review</label>
                <input type="text" class="form-control validate" id="title" name="title" value="<%= review.title %>" required>
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Write your Review Here</label>
                <input type="text" class="form-control validate" id="comment" name="comment" value="<%= review.comment %>" required>
            </div>
            <div class="container">
                <div class="row">
                    <button class="btn btn-primary col-md 2" value="Submit" type="submit">Submit</button>
                    <form method="POST" action="/review/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-primary col-md 2" value="Delete" type="submit">Delete Review</button> 
                    </form>
                </div>
            </div>
        </div>
    </form>

    <%- include('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

</html>